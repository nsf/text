{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "src",
    "lib": ["dom", "es2015", "es2016"],
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
